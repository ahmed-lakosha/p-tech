<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="blog_post_view_form_inherit" model="ir.ui.view">
        <field name="name">blog.post.form.inherit</field>
        <field name="model">blog.post</field>
        <field name="inherit_id" ref="website_blog.view_blog_post_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='website_id']" position="after">
                <field name="is_app"/>
                <field name="icon" widget="image" invisible="not is_app"/>
            </xpath>
        </field>
    </record>
    <record id="blog_post_view_list_inherit" model="ir.ui.view">
        <field name="name">blog.post.list.inherit</field>
        <field name="model">blog.post</field>
        <field name="inherit_id" ref="website_blog.view_blog_post_list"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="before">
                <field name="sequence" widget="handle"/>
            </xpath>
        </field>
    </record>
</odoo>
